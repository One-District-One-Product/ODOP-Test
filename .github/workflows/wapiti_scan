name: Wapiti Scan

on:
  push:
    branches:
      - main

jobs:
  wapiti-scan:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Install Wapiti
        run: |
          sudo apt-get update
          sudo apt-get install -y wapiti
          
      - name: Create Output Directory
        run: mkdir -p /path/to/output

      - name: Run Wapiti Scan
        run: wapiti http://localhost:3000/ -b  /path/to/output

      - name: Save Wapiti Scan Results
        run: |
          mkdir wapiti-results
          mv /path/to/output wapiti-results/
        continue-on-error: true

       - name: Upload Wapiti HTML Report
        uses: actions/upload-artifact@v2
        with:
          name: wapiti-html-report
          path: wapiti-results/wapiti-report.html

      - name: Upload Wapiti XML Report
        uses: actions/upload-artifact@v2
        with:
          name: wapiti-xml-report
          path: wapiti-results/wapiti-report.xml
